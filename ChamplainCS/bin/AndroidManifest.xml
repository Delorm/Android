<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.champlaincs"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name=".splash"
            android:label="@string/app_name"
            android:theme="@style/NoActionBar"
            android:screenOrientation="portrait"
             >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/NoActionBar"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.example.champlaincs.ACTIVITY_MAIN" />
				<category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".Dec"
            android:label="@string/title_activity_dec"
            android:theme="@style/NoActionBar"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Preuniversity"
            android:theme="@style/NoActionBar"
            android:label="@string/title_activity_preuniversity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Option"
            android:label="@string/title_activity_option"
            android:theme="@style/NoActionBar"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:theme="@style/NoActionBar"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait" >
        </activity>
        
    </application>

</manifest>
